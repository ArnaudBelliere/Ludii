	(info
        {
        }
    )	
		
	(graphics {
		(piece Scale "Ball" 1.0)
	    (board Style Shibumi)
	    (piece Colour "Ball0" fillColour:(colour White))
	    (piece Colour "Ball1" fillColour:(colour Black))
	    (piece Colour "Ball2" fillColour:(colour Red))
	})
       
)