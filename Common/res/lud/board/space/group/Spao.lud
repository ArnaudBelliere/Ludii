(game "Spao" 
	(players 3) 
    (equipment { 
        (board (square 4 pyramidal:True) use:Vertex) 
        (piece "Ball" Each) 
    }) 
    (rules
        (play
    		(move Add 
    			(to (sites Empty) 
    				if:(is Flat)
    			)
    			(then 
    				(set Score Mover (* (sizes Group Mover)))
    			)
    		)
        )
	    (end
	        (if   
	        	(= (size Array (array (sites Occupied by:All))) 30)
	        	(byScore)
	        )
	    )
	)
)

