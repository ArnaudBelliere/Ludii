(game "Agapi" 
    (players 2) 
    (equipment { 
        (board (square 8)) 
        (piece "Bishop" Each (move Slide Diagonal (then (moveAgain))))
        (piece "Dot" Neutral)
    }) 
    (rules 
        (start { 
            (place "Bishop1" {"C1" "F1" "A3" "H3"})
            (place "Bishop2" {"C8" "F8" "A6" "H6"})
        })
        
        (play 
            (if (is Even (count Moves))
                (forEach Piece)
                (move Shoot (piece "Dot0") Orthogonal)
            )
        )
        
        (end ("NoMoves" Loss))
    )
)

